#!/bin/sh

RAILS_PORT=8080
if [ -n "$PORT" ]; then
  RAILS_PORT=$PORT
fi

bin/rails db:create
bundle exec ridgepole -c config/database.yml -E production --apply -f db/Schemafile

# Remove a potentially pre-existing server.pid for Rails.
rm -f tmp/pids/server.pid

bin/rails s -p $RAILS_PORT -b 0.0.0.0

